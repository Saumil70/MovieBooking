@model List<Theatre>

<div class="card shadow border-0 mt-3  pb-3">
    <div class="card-header bg-secondary bg-gradient m-lg-1 py-3 ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Theatre Manager</h2>
            </div>
        </div>
    </div>
    <div class=" card-body   p-5">
        <div class=" row">
            <div class=" col-12 text-end pb-3">
                <button class=" btn btn-dark" id="btnAdd">
                    <i class="bi bi-patch-plus"></i> Create
                </button>
            </div>
        </div>
        <div class=" container-fluid">
            <table id="tblDB" class=" table table-hover table-bordered px-5 " style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Theatre Id
                        </th>
                        <th>
                            Theatre Name
                        </th>
                        <th>
                            Address
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tblData"></tbody>
            </table>

            <div class=" modal fade modal" id="userModal">
                <div class=" modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="text-info modal-title" id="addTheatre">Add Theatre</h2>
                            <button class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post" id="theatreForm">
                                <div class="form-group" id="cId">
                                    <label>Id</label>
                                    <input type="text" class="form-control" id="TheatreId" disabled="disabled" />
                                </div>
                                <div class="form-group">
                                    <label>Theatre Name</label>
                                    <input type="text" placeholder="Enter Theatre Name" class="form-control" id="TheatreName" />
                                </div>
                                <div class="form-group">
                                    <label>Address</label>
                                    <input type="text" placeholder="Enter Address" class="form-control" id="Address" />
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">

                            <button class="btn btn-primary" onclick="AddTheatre();" id="AddData">Create</button>
                            <button class="btn btn-warning" onclick="UpdateTheatre();" style="display:none" id="UpdateData">Update</button>

                            <button class="btn btn-danger btn-default" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


@section Scripts
{
    <script src="~/js/Theatre.js"></script>

}